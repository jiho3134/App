<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constrain"
    android:background="@drawable/main2"
    tools:context=".MainActivity"
    tools:ignore="SpeakableTextPresentCheck">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/mnuopen"
            android:layout_width="40dp"
            android:background="@drawable/btnmenu"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tvwater"
            android:layout_width="200dp"
            android:layout_height="66dp"
            android:fontFamily="serif-monospace"
            android:gravity="end"
            android:text="\n물을 채워주세요."
            android:textColor="#52B8F1"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="4">


        <TextView
            android:id="@+id/tvTem"
            android:layout_width="200dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:textColor="#386034"
            android:text=""
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvserver"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:textColor="#291919"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnTem"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btntem"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    tools:ignore="SpeakableTextPresentCheck" />


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"

                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/btn_eat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"

                    android:background="@drawable/btneat"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/btn_came"
                    android:background="@drawable/btncctv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"

                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>